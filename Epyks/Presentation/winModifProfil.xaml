<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Epyks"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Epyks.WinModifProfil"
        mc:Ignorable="d"
        Title="Modification du profil" ResizeMode="NoResize" Height="525">
    <Grid>
        <Button x:Name="btnChangeImage" Content="Modifier image" HorizontalAlignment="Left" Height="25" Margin="10,132,0,0" VerticalAlignment="Top" Width="120" FontSize="13.333" FontFamily="Trebuchet MS" Background="#FFB900FF" BorderThickness="0" BorderBrush="{x:Null}" Foreground="White" Click="BtnChangeImage_Click"/>
        <Image x:Name="imgProfil" Margin="10,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Source="default_profile.jpg" Stretch="Fill" Width="120" Height="120">
            <Image.OpacityMask>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/profil_default.png"/>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="lblNom" Content="Christelle S." Margin="150,5,10,0" VerticalAlignment="Top" FontSize="24" FontFamily="Leelawadee UI Semilight"/>
        <Label x:Name="label" Content="20 ans" Margin="150,43.667,0,0" VerticalAlignment="Top" FontSize="18.667" Height="31" HorizontalAlignment="Left" Width="79" FontFamily="Leelawadee UI Semilight"/>
        <Separator Height="1" Margin="150,179,176,0" VerticalAlignment="Top" Width="230"/>
        <Label x:Name="lblNom1" Content="Nom" HorizontalAlignment="Left" Margin="34,219,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
        <Label x:Name="lblSexe" Content="Sexe" HorizontalAlignment="Left" Margin="34,349,0,0" VerticalAlignment="Top" Width="77" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
        <Label x:Name="lblEmail" Content="Email" HorizontalAlignment="Left" Margin="34,301,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
        <Label x:Name="lblPrenom" Content="Prenom" HorizontalAlignment="Left" Margin="34,260,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
        <Label x:Name="lblNomUtilisateur" Content="Nom d'utilisateur" HorizontalAlignment="Left" Margin="400,219,0,0" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.317,0.538" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
        <Separator HorizontalAlignment="Left" Height="27.006" Margin="261.497,302.446,0,0" VerticalAlignment="Top" Width="194" RenderTransformOrigin="0.5,0.5" Foreground="#FFB900FF">
            <Separator.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.293"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Separator.RenderTransform>
        </Separator>
        <Button x:Name="btnEnregistrerInfos" Content="Enregistrer" HorizontalAlignment="Right" Height="46" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="189" FontSize="14.667" FontFamily="Trebuchet MS" Background="#FFB900FF" BorderThickness="0" BorderBrush="{x:Null}" Foreground="White" Click="BtnEnregistrerInfos_Click_1">
        </Button>
        <Label x:Name="lblContenuUsername" Content="Melissa07"  HorizontalContentAlignment="Right" HorizontalAlignment="Right" Margin="0,219,18,0" VerticalAlignment="Top" RenderTransformOrigin="-2.261,0.538" Width="181" FontFamily="Leelawadee UI Semilight" FontSize="14.667" Background="White" Foreground="#FFB900FF"/>
        <Label x:Name="lblDateDeNaissance" Content="Date de naissance" HorizontalAlignment="Left" Margin="400,260,0,0" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.317,0.538" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
        <DatePicker x:Name="datePBirthday" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Height="44" Margin="0,0,18,198" VerticalAlignment="Bottom" Width="181" BorderThickness="0" Text="Selectionnez votre" FontSize="16" FontFamily="Leelawadee UI Semilight" FirstDayOfWeek="Monday" IsTodayHighlighted="True" DisplayDateStart="1915-01-01"/>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="31.28" Margin="5,0,0,108.28" VerticalAlignment="Bottom" Width="29" Source="/Epyks;component/Resources/Gender-64.png"/>
        <Image x:Name="imgEmail" HorizontalAlignment="Left" Height="31.28" Margin="5,0,0,152" VerticalAlignment="Bottom" Width="29" Source="/Epyks;component/Resources/Email-64.png"/>
        <Image x:Name="image1_Copy1" HorizontalAlignment="Left" Height="31.28" Margin="5,0,0,198.227" VerticalAlignment="Bottom" Width="29" Source="/Epyks;component/Resources/Name-64.png"/>
        <Image x:Name="image1_Copy2" HorizontalAlignment="Left" Margin="5,224,0,241" Width="29" Source="/Epyks;component/Resources/Contacts-64.png"/>

        <Label x:Name="lblConfirmPassword" Content="Confirmer mot de passe" HorizontalAlignment="Left" Margin="426,349,0,0" VerticalAlignment="Top" Width="180" RenderTransformOrigin="0.317,0.538" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic" Visibility="Hidden"/>

        <Label x:Name="lblContenuUsername_Copy1" Content="**********"  HorizontalContentAlignment="Right" HorizontalAlignment="Right" Margin="0,349,18,0" VerticalAlignment="Top" RenderTransformOrigin="-2.261,0.538" Width="133" FontFamily="Leelawadee UI Semilight" FontSize="14.667" Background="White" Foreground="#FFB900FF" Visibility="Hidden"/>

        <Button x:Name="btnRetour" Content="Quitter" HorizontalAlignment="Left" Height="46" Margin="11,0,0,10" VerticalAlignment="Bottom" Width="189" FontSize="14.667" FontFamily="Trebuchet MS" Background="#FFB900FF" BorderThickness="0" BorderBrush="{x:Null}" Foreground="White" Click="BtnRetour_Click"/>
        <StackPanel HorizontalAlignment="Left" Height="37" Margin="372,360,0,0" VerticalAlignment="Top" Width="380" Orientation="Horizontal">
            <Image x:Name="image1_Copy3" HorizontalAlignment="Left" Width="29" Source="/Epyks;component/Resources/Lock 2-64.png" Height="32" VerticalAlignment="Top"/>
            <Label x:Name="lblPassword" Content="Mot de passe" HorizontalAlignment="Center" Width="167" RenderTransformOrigin="0.317,0.538" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
            <Label x:Name="lblContenuUsername_Copy" Content="**********"  HorizontalContentAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="-2.261,0.538" Width="182" FontFamily="Leelawadee UI Semilight" FontSize="14.667" Background="White" Foreground="#FFB900FF" Height="32" HorizontalAlignment="Right"/>
        </StackPanel>
        <TextBox x:Name="txtBContenuNom" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="30" Margin="116,219,0,0" TextWrapping="Wrap" Text="Sissoko" VerticalAlignment="Top" Width="211" FontSize="14.667" FontFamily="Leelawadee UI Semilight" Foreground="#FFB900FF"/>
        <TextBox x:Name="txtBContenuPrenom" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="30" Margin="116,262,0,0" TextWrapping="Wrap" Text="Christelle" VerticalAlignment="Top" Width="211" FontSize="14.667" FontFamily="Leelawadee UI Semilight" Foreground="#FFB900FF"/>
        <TextBox x:Name="txtBContenuEmail" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="30" Margin="116,310,0,0" TextWrapping="Wrap" Text="adeola@gmail.com" VerticalAlignment="Top" Width="211" FontSize="14.667" FontFamily="Leelawadee UI Semilight" Foreground="#FFB900FF"/>
        <StackPanel HorizontalAlignment="Left" Height="37" Margin="372,310,0,0" VerticalAlignment="Top" Width="380" Orientation="Horizontal">
            <Image x:Name="image1_Copy4" HorizontalAlignment="Left" Width="29" Source="/Epyks;component/Resources/Lock 2-64.png" Height="32" VerticalAlignment="Top"/>
            <Label x:Name="lblPassword1" Content="Numero de telephone" HorizontalAlignment="Center" Width="167" RenderTransformOrigin="0.317,0.538" FontSize="16" FontFamily="Leelawadee UI Semilight" FontStyle="Italic"/>
            <TextBox x:Name="txtBContenuNoTelephone" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" Text="514-111-2222" VerticalAlignment="Top" FontSize="14.667" FontFamily="Leelawadee UI Semilight" Foreground="#FFB900FF" Width="183"/>

        </StackPanel>
        <RadioButton x:Name="rdBMasculin" GroupName="Sexe" Content="Masculin" HorizontalAlignment="Left" Margin="242,360,0,0" VerticalAlignment="Top" Width="85" FontSize="14.667" FontFamily="Leelawadee UI Semilight" Foreground="#FFB900FF"/>
        <RadioButton x:Name="rdB_Feminin" GroupName="Sexe" Content="Feminin" HorizontalAlignment="Left" Margin="116,360,0,0" VerticalAlignment="Top" IsChecked="True" Height="28" Width="84" FontSize="14.667" FontFamily="Leelawadee UI Semilight" Background="White" Foreground="#FFB900FF"/>
        <TextBox x:Name="txtBoxMessagePrive" HorizontalAlignment="Left" Height="50" Margin="150,75,0,0" TextWrapping="Wrap" Text="Mon message prive" VerticalAlignment="Top" Width="602" FontSize="14.667" FontFamily="Leelawadee UI" FontStyle="Italic" TextDecorations="{x:Null}"/>
        <Button x:Name="button" Content="Modifier mon message" Click="modifierMessagePerso_Click" HorizontalAlignment="Right" Margin="0,88,18,0" VerticalAlignment="Top" Width="124" Height="24" FontSize="10.667" Background="#FFB900FF" BorderBrush="White" Foreground="White" BorderThickness="0"/>

    </Grid>
</Window>
