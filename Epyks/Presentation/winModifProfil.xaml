<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Epyks"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Epyks.winModifProfil"
        mc:Ignorable="d"
        Title="winModifProfil" Height="300" Width="300">
    <Grid>
        <Button x:Name="btnChangeImage" Content="Modifier image" HorizontalAlignment="Left" Height="16" Margin="10,87,0,0" VerticalAlignment="Top" Width="81" FontSize="8" FontFamily="Trebuchet MS" Background="#FFB900FF" BorderThickness="0" BorderBrush="{x:Null}" Foreground="White"/>
        <Image x:Name="image" Margin="10,5,0,0" HorizontalAlignment="Left" Height="77" VerticalAlignment="Top" Width="81" Source="default_profile.jpg" Stretch="Fill">
            <Image.OpacityMask>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/profil_default.png"/>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="lblNom" Content="Christelle S." Margin="96,5,63.507,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="20 ans" Margin="96,24.96,0,0" VerticalAlignment="Top" FontSize="8" Height="19.14" HorizontalAlignment="Left" Width="41.66"/>
        <Separator Height="0.5" Margin="79.5,114,79.5,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
