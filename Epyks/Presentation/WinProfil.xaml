<Window
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls"
xmlns:ec="http://schemas.microsoft.com/expression/2010/controls"
x:Class="Epyks.WinProfil"
x:Name="Window"
Title="WinProfil" ResizeMode="CanResizeWithGrip" SizeToContent="WidthAndHeight">

	<Grid>
		<Menu VerticalAlignment="Top" Grid.ColumnSpan="2">
			<MenuItem Header="Fichier" Height="24.776" Width="51.79" FontSize="13.333">
				<MenuItem Header="Status" Click="MenuStatusItem_Click">
					<MenuItem Header="En ligne">
						<MenuItem.Icon>
							<Image Source="EnLigne.png"/>
						</MenuItem.Icon>
					</MenuItem>	
					<MenuItem Header="Absent" Click="MenuStatusItem_Click">
						<MenuItem.Icon>
							<Image Source="Absent.png"/>
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="Déconnecté" Click="MenuStatusItem_Click">
						<MenuItem.Icon>
							<Image Source="Deconnecte.png"/>
						</MenuItem.Icon>
					</MenuItem>
				</MenuItem>
				<Separator/>
				<MenuItem Header="Changer de mot de passe"/>
				<MenuItem Header="Déconnexion"/>
				<MenuItem Header="Fermer"/>
			</MenuItem>
			<MenuItem FontSize="13.333" Header="Outils"/>
			<MenuItem FontSize="13.333" Header="À propos"/>
		</Menu>
		<Grid x:Name="LayoutRoot" Margin="0,0,2,0" Grid.Column="1" Grid.Row="1" MinHeight="400" MinWidth="790">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="250*"/>
				<ColumnDefinition Width="750*"/>
			</Grid.ColumnDefinitions>
			<Border BorderBrush="#FFDB6FFF" BorderThickness="0,0,1,0" Margin="0,24.776,0,0" Grid.Column="0">
				<Grid Margin="0,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
					<Grid.RowDefinitions>
						<RowDefinition Height="10*"/>
						<RowDefinition Height="5*"/>
						<RowDefinition Height="85*"/>
					</Grid.RowDefinitions>
					<StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="0,10,0,0" Grid.Row="0">
						<Image Source="pack://siteoforigin:,,,/Resources/profil_default.png" Stretch="UniformToFill" Margin="0,5,0,5"/>
						<StackPanel Width="170">
							<Label Content="Prénom Nom" FontSize="20" Foreground="#FFC926FF"/>
							<Label Content="username" FontSize="14" Foreground="#FFDB6FFF"/>
						</StackPanel>
					</StackPanel>
					<Grid Margin="0,13,0,0" Grid.Row="1">
						<Grid.RowDefinitions>
							<RowDefinition Height="1*"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="8*"/>
							<ColumnDefinition Width="2*"/>
						</Grid.ColumnDefinitions>

						<TextBox Margin="0,0,0,0" TextWrapping="Wrap" FontSize="16" VerticalContentAlignment="Center" BorderThickness="0" Padding="12,0,0,0" Background="#FFEEEEEE" BorderBrush="{x:Null}" CaretBrush="#FF969696" Foreground="#FF969696" Grid.Column="0" Grid.Row="0"/>
						<Button Grid.Column="1" Grid.Row="0" BorderThickness="0" BorderBrush="{x:Null}" Background="#FFC926FF">
							<StackPanel>
								<Image Source="pack://siteoforigin:,,,/Resources/Loupe.png" Stretch="None"/>
							</StackPanel>
						</Button>
					</Grid>
					<ListView Margin="0,10,0,0" Grid.Row="2">
						<ListView.View>
							<GridView>
								<GridViewColumn/>
							</GridView>
						</ListView.View>
					</ListView>
				</Grid>
			</Border>
			<Grid Grid.Column="1" Margin="0,24.776,0,0"/>
		</Grid>
	</Grid>
</Window>